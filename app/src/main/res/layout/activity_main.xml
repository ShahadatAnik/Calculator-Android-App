<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"

    tools:ignore="MissingClass">

    <EditText
        android:id="@+id/et_input_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text=""
        android:textColor="@color/white"
        android:textSize="55sp"
        app:layout_constraintBottom_toTopOf="@id/tv_below_et_input_num"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_below_et_input_num"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text=""
        android:background="@color/ashs"
        android:textColor="@color/white"
        android:textSize="55sp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="14dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_input_num"
        app:layout_constraintBottom_toTopOf="@id/btn_num_7"
        />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Clear"
        android:backgroundTint="@color/ashs"
        android:layout_marginRight="14dp"
        app:layout_constraintTop_toTopOf="@+id/tv_below_et_input_num"
        app:layout_constraintBottom_toBottomOf="@+id/tv_below_et_input_num"
        app:layout_constraintEnd_toStartOf="@id/btn_delete"
        app:layout_constraintStart_toEndOf="@id/tv_below_et_input_num"
        />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Delete"
        android:backgroundTint="@color/ashs"
        android:layout_marginRight="14dp"
        app:layout_constraintTop_toTopOf="@+id/tv_below_et_input_num"
        app:layout_constraintBottom_toBottomOf="@+id/tv_below_et_input_num"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/btn_num_dot"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="."
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_num_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_1" />

    <Button
        android:id="@+id/btn_num_0"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="0"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_num_equal"
        app:layout_constraintStart_toEndOf="@id/btn_num_dot"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_2" />

    <Button
        android:id="@+id/btn_num_equal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="="
        android:textSize="65sp"
        android:backgroundTint="@color/ashs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_num_plus"
        app:layout_constraintStart_toEndOf="@id/btn_num_0"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_3" />

    <Button
        android:id="@+id/btn_num_plus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="+"
        android:textSize="65sp"
        android:backgroundTint="@color/ashs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_num_equal"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_minus" />

    <Button
        android:id="@+id/btn_num_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="1"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toTopOf="@id/btn_num_dot"
        app:layout_constraintStart_toStartOf="@id/btn_num_dot"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_4" />

    <Button
        android:id="@+id/btn_num_2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="2"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toTopOf="@id/btn_num_0"
        app:layout_constraintStart_toStartOf="@id/btn_num_0"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_5" />

    <Button
        android:id="@+id/btn_num_3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="3"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toTopOf="@id/btn_num_equal"
        app:layout_constraintStart_toStartOf="@id/btn_num_equal"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_6" />

    <Button
        android:id="@+id/btn_num_minus"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="-"
        android:textSize="65sp"
        android:backgroundTint="@color/ashs"
        app:layout_constraintBottom_toTopOf="@id/btn_num_plus"
        app:layout_constraintStart_toStartOf="@id/btn_num_plus"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_multiplication" />

    <Button
        android:id="@+id/btn_num_4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="4"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toTopOf="@id/btn_num_1"
        app:layout_constraintStart_toStartOf="@id/btn_num_1"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_7" />

    <Button
        android:id="@+id/btn_num_5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="5"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toTopOf="@id/btn_num_2"
        app:layout_constraintStart_toStartOf="@id/btn_num_2"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_8" />

    <Button
        android:id="@+id/btn_num_6"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="6"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toTopOf="@id/btn_num_3"
        app:layout_constraintStart_toStartOf="@id/btn_num_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_9" />

    <Button
        android:id="@+id/btn_num_multiplication"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="x"
        android:textSize="65sp"
        android:backgroundTint="@color/ashs"
        app:layout_constraintBottom_toTopOf="@id/btn_num_minus"
        app:layout_constraintStart_toStartOf="@id/btn_num_minus"
        app:layout_constraintTop_toBottomOf="@+id/btn_num_devide" />

    <Button
        android:id="@+id/btn_num_7"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="7"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toTopOf="@id/btn_num_4"
        app:layout_constraintStart_toStartOf="@id/btn_num_dot"
        app:layout_constraintTop_toBottomOf="@id/tv_below_et_input_num" />

    <Button
        android:id="@+id/btn_num_8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="8"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toTopOf="@id/btn_num_5"
        app:layout_constraintStart_toStartOf="@id/btn_num_5"
        app:layout_constraintTop_toBottomOf="@id/tv_below_et_input_num" />

    <Button
        android:id="@+id/btn_num_9"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="9"
        android:textSize="65sp"
        android:backgroundTint="@color/ashsLight"
        app:layout_constraintBottom_toTopOf="@id/btn_num_6"
        app:layout_constraintStart_toStartOf="@id/btn_num_6"
        app:layout_constraintTop_toBottomOf="@id/tv_below_et_input_num" />

    <Button
        android:id="@+id/btn_num_devide"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="/"
        android:textSize="65sp"
        android:backgroundTint="@color/ashs"
        app:layout_constraintBottom_toTopOf="@id/btn_num_multiplication"
        app:layout_constraintStart_toStartOf="@id/btn_num_multiplication"
        app:layout_constraintTop_toBottomOf="@id/tv_below_et_input_num" />

</androidx.constraintlayout.widget.ConstraintLayout>